@model GetGuideByIDQueryResult
@{
    ViewData["Title"] = "GetGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Rehber Düzenle</h4>
<br />

<form method="post">
    <input type="hidden" asp-for="GuideID" />

    <label>Rehber Adı</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br>

    <label>Rehber Açıklaması</label>
    <input type="text" class="form-control" asp-for="Description" />
    <br>

    <button class="btn btn-outline-primary">Düzenle</button>

</form>

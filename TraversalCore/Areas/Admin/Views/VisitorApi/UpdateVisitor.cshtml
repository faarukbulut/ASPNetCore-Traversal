@model VisitorViewModel
@{
    ViewData["Title"] = "UpdateVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Ziyaretçi Düzenle</h4>
<br />

<form method="post">

    <input type="hidden" asp-for="VisitorID" />

    <label>Ad Soyad</label>
    <input type="text" class="form-control" asp-for="NameSurname" />
    <br />

    <label>Şehir</label>
    <input type="text" class="form-control" asp-for="City" />
    <br />

    <label>Ülke</label>
    <input type="text" class="form-control" asp-for="Country" />
    <br />

    <label>Mail</label>
    <input type="text" class="form-control" asp-for="Mail" />
    <br />

    <button class="btn btn-outline-primary">Düzenle</button>

</form>

